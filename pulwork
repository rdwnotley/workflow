# This is a basic workflow to help you get started with Actions

name: CI

# Controls when the workflow will run
on:
  # Triggers the workflow on push or pull request events but only for the main branch
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# A workflow run is made up of one or more jobs that can run sequentially or in parallel
jobs:
  # This workflow contains a single job called "build"
  Build:
     
    # The type of runner that the job will run on
    runs-on: ubuntu-latest

    # Steps represent a sequence of tasks that will be executed as part of the job
    steps:

      # Checks-out your repository under $GITHUB_WORKSPACE, so your job can access it
      - uses: actions/checkout@v3

      - name: Create Stack in Pulumi
        env: # Or as an environment variable
         AWS_ACCESS_KEY_ID: ${{ secrets.AWS_ACCESS_KEY_ID }}
         AWS_SECRET_ACCESS_KEY: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
         AWS_REGION: ${{ secrets.AWS_REGION }}
         PULUMI_ACCESS_TOKEN: ${{ secrets.PULUMI_ACCESS_TOKEN }}
         PULUMI_EXPERIMENTAL: ${{ secrets.PULUMI_EXPERIMENTAL }}
        run: |
          mkdir artifacts
          pulumi login
          pulumi plugin install language yaml
          pulumi plugin install resource aws
          pulumi stack select dev --non-interactive
          pulumi preview --save-plan ./artifacts/pulumi-plan.json
          mv Pulumi.yaml artifacts/
      - name: Publish Artifacts
        uses: actions/upload-artifact@v1.0.0
        with:
          name: Plan
          path: artifacts
  provision:
    needs: Build
    name: Deploy to Dev
    environment:
      name: Dev

    runs-on: ubuntu-latest

    steps:
      - name: Download artifacts
        uses: actions/download-artifact@v2
        with:
          name: Plan

      - name: Provision Infrastructure
        env: # Or as an environment variable
         AWS_ACCESS_KEY_ID: ${{ secrets.AWS_ACCESS_KEY_ID }}
         AWS_SECRET_ACCESS_KEY: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
         AWS_REGION: ${{ secrets.AWS_REGION }}
         PULUMI_ACCESS_TOKEN: ${{ secrets.PULUMI_ACCESS_TOKEN }}
         PULUMI_EXPERIMENTAL: ${{ secrets.PULUMI_EXPERIMENTAL }}
        run: |
          pulumi login
          pulumi plugin install language yaml
          pulumi plugin install resource aws
          pulumi stack select dev --non-interactive
          pulumi up --plan='pulumi-plan.json' --non-interactive --yes
